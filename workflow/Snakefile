from snakemake.utils import min_version

#### set minimum snakemake version #####
min_version("6.15.5")


##### setup report #####
configfile: "config/config.yaml"


##### load rules #####
include: "rules/common.smk"
include: "rules/filtering.smk"
include: "rules/plasmid_reconstruction.smk"
include: "rules/assembly.smk"
include: "rules/quality_check.smk"


##### target rules #####
rule all:
    input:
        expand(
            "results/genome/{isolate}.genome.fa.gz",
            isolate=samples["isolate"],
        ),
        lambda w: expand(
            "results/plasmids/{isolate}.plasmids.fa.gz",
            isolate=plasmids_when_needed()
        ),
        expand(
            "results/summary/{isolate}.csv",
            isolate=samples["isolate"],
        ),
